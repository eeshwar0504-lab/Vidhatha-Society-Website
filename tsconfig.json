{
  "compilerOptions": {
    /* ===== Build & language options ===== */
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    /* ===== Allow both JS + TS ===== */
    "allowJs": true,
    "checkJs": false,
    /* ===== TypeScript strictness ===== */
    "skipLibCheck": true,
    "strict": true,
    /* ===== Emission & interop ===== */
    "noEmit": true,
    "esModuleInterop": true,
    /* ===== Module resolution ===== */
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    /* ===== Path aliases ===== */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    /* ===== Next.js plugin ===== */
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
