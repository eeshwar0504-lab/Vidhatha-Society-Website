{
  "compilerOptions": {
    /* ===== Build & language options ===== */
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    /* ===== Allow both JS + TS ===== */
    "allowJs": true,
    "checkJs": false,
    /* ===== TypeScript strictness ===== */
    "skipLibCheck": true,
    "strict": true,
    /* ===== Emission & interop ===== */
    "noEmit": true,
    "esModuleInterop": true,
    /* ===== Module resolution ===== */
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    /* ===== Next.js plugin ===== */
    "plugins": [
      {
        "name": "next"
      }
    ],
    /* ===== Path aliases ===== */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    ".next/types/**/*.ts",
    "/*.js",
    "/*.jsx",
    "/*.ts",
    "/*.tsx",
    "app/contact/page.jsx",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
